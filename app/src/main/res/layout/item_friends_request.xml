<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp"
    app:cardElevation="8dp"
    android:layout_marginBottom="5dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="30dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <View
            android:id="@+id/view"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle_icon"/>

        <TextView
            android:id="@+id/item_friends_rq_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="P"
            android:textSize="45sp"
            android:textColor="@color/black"
            android:layout_alignLeft="@id/view"
            android:layout_alignTop="@id/view"
            android:layout_alignRight="@id/view"
            android:layout_alignBottom="@id/view"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/item_friends_rq_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto"
            android:text="Pham Nghia"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_toRightOf="@id/view"/>

        <TextView
            android:id="@+id/item_friends_rq_requestMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/roboto"
            android:maxWidth="250dp"
            android:text="Want to be your friend"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_toRightOf="@id/view"
            android:layout_below="@id/item_friends_rq_name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_friends_rq_requestMessage"
            android:layout_toRightOf="@id/view">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/item_friends_rq_deny"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:letterSpacing="0"
                android:text="Deny"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="italic"
                app:cornerRadius="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/item_friends_rq_accept"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:letterSpacing="0"
                android:text="Accept"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="italic"
                app:cornerRadius="30dp"
                android:layout_marginHorizontal="10dp"/>

        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>