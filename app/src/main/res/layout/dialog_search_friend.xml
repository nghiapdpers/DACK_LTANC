<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/my_rounded_view"
    android:backgroundTint="?attr/colorSurface"
    android:orientation="vertical">

    <View
        android:id="@+id/view"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_margin="5dp"
        android:background="@drawable/circle_icon"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialog_search_user_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="P"
        android:textSize="45sp"
        android:textColor="@color/black"
        android:layout_alignLeft="@id/view"
        android:layout_alignTop="@id/view"
        android:layout_alignRight="@id/view"
        android:layout_alignBottom="@id/view"
        android:textAlignment="center"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialog_search_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto"
        android:text="Pham Nghia"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_toRightOf="@id/view"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialog_search_request_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/roboto"
        android:maxWidth="250dp"
        android:text="Let's make friends!?"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_toRightOf="@id/view"
        android:layout_below="@id/dialog_search_username"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_search_request_message"
        android:layout_toRightOf="@id/view">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_search_block"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:letterSpacing="0"
            android:text="Block"
            android:visibility="gone"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="italic"
            app:cornerRadius="30dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_search_request"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:letterSpacing="0"
            android:text="Add Friend"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="italic"
            app:cornerRadius="30dp"
            android:layout_marginHorizontal="10dp"/>

    </LinearLayout>

</RelativeLayout>