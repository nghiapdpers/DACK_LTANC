<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/my_rounded_view"
    android:backgroundTint="?attr/colorSurface"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dialog_group_rcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialog_group_create"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/dialog_group_rcv"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="1"
        android:fontFamily="@font/roboto"
        android:letterSpacing="0"
        android:text="Create"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="italic"
        app:cornerRadius="30dp" />

    <EditText
        android:id="@+id/dialog_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:paddingHorizontal="10dp"
        android:inputType="text"
        android:layout_marginStart="10dp"
        android:hint="Group Name"
        android:layout_below="@id/dialog_group_rcv"
        android:layout_toLeftOf="@id/dialog_group_create"
        android:background="@drawable/search_view" />

</RelativeLayout>