<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp">

        <View
            android:id="@+id/view"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle_icon" />

        <TextView
            android:id="@+id/item_friends_la_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/view"
            android:layout_alignTop="@id/view"
            android:layout_alignRight="@id/view"
            android:layout_alignBottom="@id/view"
            android:fontFamily="@font/roboto"
            android:text="P"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/item_friends_la_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto"
            android:text="Pham Nghia"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_toRightOf="@id/view"/>

        <TextView
            android:id="@+id/item_friends_la_isActivated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/roboto"
            android:maxWidth="250dp"
            android:text="is activating"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="invisible"
            android:layout_below="@id/item_friends_la_name"
            android:layout_toRightOf="@id/view"/>

        <CheckBox
            android:id="@+id/item_friends_la_createGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_friends_la_name"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>